{
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy", // Altere "debugpy" para "python" para compatibilidade com o VS Code
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py", // Remove "module", pois não é necessário quando usamos "program"
            "args": [
                "--reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/src" // Define o diretório de trabalho como a pasta "src"
        }
    ]
}